
public class ExoWhileBoucle {

	public static void main(String[] args) {
		
		int a = 1 ;
		// a = a + 1 ;
		while(a <= 100) {
			System.out.println("La variable a = " + a);
		
			a++;
		}
		
		
		
		
		int b = 100;
		// b = b - 1 ;
		while(b >= 1) {
			System.out.println("La variable b = " + b);
			b --;
			
			
		}
		
		
		
	

	}

}
